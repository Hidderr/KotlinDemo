<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

    <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:counterEnabled="true"
                android:visibility="gone"
                app:counterMaxLength="20"
                app:counterTextAppearance="?android:attr/textAppearanceLarge"
                app:errorEnabled="true"
                app:errorTextAppearance="?android:attr/textAppearanceSmall"
                app:hintAnimationEnabled="true"
                app:hintTextAppearance="@style/hintAppearance"
                app:theme="@style/TextInputLayoutLineColor">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/mac"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入需要连接的MAC"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="14dp" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:counterEnabled="true"
                android:visibility="gone"
                app:counterMaxLength="20"
                app:counterTextAppearance="?android:attr/textAppearanceMedium"
                app:errorEnabled="true"
                app:errorTextAppearance="?android:attr/textAppearanceSmall"
                app:hintAnimationEnabled="true"
                app:hintTextAppearance="@style/hintAppearance"
                app:passwordToggleDrawable="@drawable/common_selector_password_show_hidden"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorPrimary"
                app:passwordToggleTintMode="multiply"
                app:theme="@style/TextInputLayoutLineColor">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/uuid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入UUID"
                    android:visibility="gone"
                    android:inputType="textPassword"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="14dp" />


        </android.support.design.widget.TextInputLayout>

        <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector"
                android:text="写入数据" />

        <Button
                android:layout_marginTop="20dp"
                android:id="@+id/button"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="重新扫描" />

        <Button
                android:id="@+id/button2"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tv注册监听" />

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp" />


        <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/animated_play_pause" />


        <com.richpath.RichPathView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:vector="@drawable/vector_play" />
    </LinearLayout>

</FrameLayout>